<odoo>
    <data>
        <record id="distribution_network_group_tree_view" model="ir.ui.view">
            <field name="name">distribution.network.group.tree</field>
            <field name="model">distribution.network.group</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="action_distribution_network_group" model="ir.actions.act_window">
            <field name="name">Distribution Network Group</field>
            <field name="res_model">distribution.network.group</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem name="Distribution Network Group"
                  parent="sale.menu_sale_config"
                  id="distribution_network_group_menu"
                  sequence="310"
                  action="action_distribution_network_group"/>
    </data>
</odoo>
